{
  "name": "wpmoo-cli",
  "version": "0.1.0",
  "private": true,
  "description": "WPMoo CLI development tools",
  "scripts": {
    "build:styles": "node scripts/build-styles.js",
    "build:scripts": "node scripts/build-scripts.js",
    "build": "npm run build:styles && npm run build:scripts",
    "watch:styles": "chokidar \"$TARGET_DIR/resources/scss/**/*.scss\" -c \"npm run build:styles\"",
    "watch:js": "chokidar \"$TARGET_DIR/resources/js/**/*.js\" -c \"npm run build:scripts\"",
    "serve": "browser-sync start --proxy 'https://wp-dev.local' --https --startPath '/wp-admin' --no-notify --files \"$TARGET_DIR/assets/css/*.css\" \"$TARGET_DIR/assets/js/*.js\" \"$TARGET_DIR/**/*.php\" --ignore \"node_modules\" --ignore \"vendor\"",
    "dev": "concurrently --kill-others --prefix '[{name}]' --names 'Styles,Scripts,Sync' -c 'bgBlue.bold,bgGreen.bold,bgMagenta.bold' \"npm:watch:*\" \"npm:serve\""
  },
  "devDependencies": {
    "sass": "^1.77.8",
    "clean-css-cli": "^5.6.3",
    "browser-sync": "^3.0.2",
    "concurrently": "^8.2.2",
    "chokidar-cli": "^3.0.0",
    "replace-in-file": "^7.1.2",
    "open": "^10.1.0",
    "prettier": "^3.3.3",
    "stylelint": "^16.7.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "@picocss/pico": "^2.1.1"
  }
}