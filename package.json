{
  "name": "wpmoo-cli",
  "version": "0.1.0",
  "private": true,
  "description": "WPMoo CLI development tools",
  "scripts": {
    "build:styles": "node scripts/build-styles.js",
    "build:scripts": "node scripts/build-scripts.js",
    "build": "npm run build:styles && npm run build:scripts",
    "watch:styles": "chokidar 'resources/scss/**/*.scss' --quiet -c 'npm run build:styles'",
    "watch:js": "chokidar 'resources/js/**/*.js' --quiet -c 'npm run build:scripts'",
    "watch:php": "chokidar '**/*.php' 'index.html' --ignore 'node_modules/**' --ignore 'vendor/**' --ignore '.git/**'",
    "serve": "browser-sync start --proxy 'https://wp-dev.local' --https --startPath '/wp-admin' --no-notify --files 'assets/css/*.css,assets/js/*.js,**/*.php'",
    "dev": "concurrently --kill-others --raw 'npm:watch:styles' 'npm:watch:js' 'npm:watch:php' 'npm:serve'"
  },
  "dependencies": {
    "@picocss/pico": "^2.1.1",
    "browser-sync": "^3.0.2",
    "chokidar-cli": "^3.0.0",
    "clean-css-cli": "^5.6.3",
    "concurrently": "^8.2.2",
    "js-yaml": "^4.1.1",
    "open": "^10.1.0",
    "replace-in-file": "^7.1.2",
    "sass": "^1.77.8"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "stylelint": "^16.7.0",
    "stylelint-config-standard-scss": "^13.1.0"
  }
}
