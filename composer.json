{
  "name": "wpmoo/wpmoo-cli",
  "description": "WPMoo CLI - modular commands for the WPMoo framework (PHP 7.4+)",
  "license": "GPL-2.0-or-later",
  "homepage": "https://wpmoo.org",
  "authors": [
    {
      "name": "WPMoo",
      "email": "hello@wpmoo.org",
      "homepage": "https://wpmoo.org/"
    }
  ],
  "keywords": [
    "wordpress",
    "cli",
    "wp-cli",
    "plugin",
    "framework",
    "wpmoo"
  ],
  "type": "library",
  "require": {
    "php": ">=7.4",
    "symfony/console": "^5.4",
    "symfony/yaml": "^5.4",
    "symfony/filesystem": "^5.4",
    "symfony/process": "^5.4",
    "symfony/finder": "^5.4",
    "gettext/gettext": "^4.8",
    "wp-cli/i18n-command": "^2.1",
    "wpmoo/wpmoo-coding-standards": "dev-dev",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "phpstan/phpstan": "^1.11"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.1.x-dev"
    }
  },
  "suggest": {
    "wpmoo/wpmoo": "Provides extra helpers when running inside WPMoo-based projects"
  },
  "autoload": {
    "psr-4": {
      "WPMoo\\CLI\\": "src/"
    },
    "files": [
      "src/Support/helpers.php"
    ]
  },
  "bin": [
    "bin/moo"
  ],
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  }
}