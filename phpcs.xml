<?xml version="1.0"?>
<ruleset name="WPMoo CLI">
  <description>PHPCS rules for the WPMoo CLI package using Symfony Console standards.</description>

  <file>src</file>

  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>

  <!-- Use PSR-12 as the base standard -->
  <rule ref="PSR12">
    <!-- Allow exit() in CLI applications -->
    <exclude name="WordPress.Security.EscapeOutput.OutputNotEscaped"/>
    <exclude name="WordPress.Security.ValidatedSanitizedInput.InputNotValidated"/>
    <exclude name="Generic.PHP.ForbiddenFunctions"/>
  </rule>

  <!-- Allow exit() for CLI applications -->
  <rule ref="Generic.PHP.ForbiddenFunctions">
    <properties>
      <property name="forbiddenFunctions" type="array">
        <element key="die" value="null"/>
        <element key="eval" value="null"/>
        <!-- Remove exit from forbidden functions -->
      </property>
    </properties>
  </rule>

</ruleset>
